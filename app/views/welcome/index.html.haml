.container.fluid
  .row.sign-in-buttons.center-block
    .col-md-12
      %h1.text-center Welcome to AlleGift!
    .col-md-4.col-md-offset-2.col-sm-12.text-center
      = button_to "#", class: "btn btn-social btn-google-plus btn-lg" do
        %i.fa.fa-google-plus
        Sign in with Google+
    .col-md-4.col-sm-12.text-center
      = button_to "#", class: "btn btn-social btn-facebook btn-lg" do
        %i.fa.fa-facebook
        Sign in with Facebook
