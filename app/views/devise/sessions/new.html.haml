#{ provide(:title, 'Login') }

.container.fluid
  .row.sign-in.center-block
    .col-md-8.col-md-offset-2.text-center
      %h2 Log in
      = bootstrap_form_for(resource, url: session_path(resource_name), layout: :horizontal, label_col: "col-sm-4 ", control_col: "col-sm-7") do |f|
        = f.form_group class: "error-color" do
          = devise_error_messages!
        = f.email_field :email
        = f.password_field :password
        = f.form_group do
          = f.check_box :remember_me
        = f.form_group do
          = f.submit "Log in", class: "btn-primary"

