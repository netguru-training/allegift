#{ provide(:title, 'Gifts') }
=render 'top_nav'

.container-fluid

  //=gravatar_for current_user

  %h4.text-center= render 'search_form'
  %p.text-center= link_to "Show all", gifts_path

  %h1.text-center= @title
  %h4.text-center Gifts that other people want

  = will_paginate @gifts, renderer: BootstrapPagination::Rails
  %table.table.table-hover.table.striped.panel
    %tr
      %th Who made a wish
      %th Gift name
      %th Link
      %th

    -@gifts.each do |g|
      %tr
        %td= g.user.name
        %td= g.name
        %td= link_to "See on Allegro", g.allegro_link
        %td= link_to "Choose", gift_register_santa_path(g), method: :patch, class: 'btn btn-info'

  = will_paginate @gifts, renderer: BootstrapPagination::Rails

