#{ provide(:title, 'Add new gift') }

.container.fluid
  .row.new-wish.center-block
    .col-md-8.col-md-offset-2.text-center
      %h2 Add a new wish
      = form_for @gift do |f|
        .field
          = f.label :name
          %br/
          = f.text_field :name, class: 'form-control'
        .field
          = f.label :allegro_link
          %br/
          = f.text_field :allegro_link, class: 'form-control'
        %br
        .actions
          = f.submit 'Save', class: 'btn btn-info'
